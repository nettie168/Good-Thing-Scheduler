                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/playMotivateBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_play_arrow_24"
                        android:background="@color/sky_blue"
                        android:elevation="4dp"
                        android:layout_margin="2dp"
                        android:contentDescription="@string/music"/>

                    <TextView
                        android:id="@+id/motivateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text= "Motivating Music"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:contentDescription="@string/music"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/lightGrassGreen"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/playForestBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_play_arrow_24"
                        android:background="@color/sky_blue"
                        android:elevation="4dp"
                        android:layout_margin="2dp"
                        android:contentDescription="@string/music"/>

                    <TextView
                        android:id="@+id/forestTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text= "Forest Sounds"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:contentDescription="@string/music"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"/>

