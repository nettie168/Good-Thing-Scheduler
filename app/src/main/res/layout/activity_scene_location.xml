        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/sceneBackgroundColourCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/lightGrassGreen"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageButton
            android:id="@+id/playFrogsBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_play_arrow_24"
            android:background="@color/sky_blue"
            android:elevation="4dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/music"/>

            <TextView
                android:id="@+id/FrogsTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text= "Frogs and Birds"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_margin="4dp"
                android:contentDescription="@string/music"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/OceanWavesCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/lightGrassGreen"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/playOceanBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_play_arrow_24"
                    android:background="@color/sky_blue"
                    android:elevation="4dp"
                    android:layout_margin="2dp"
                    android:contentDescription="@string/music"/>

                <TextView
                    android:id="@+id/OceanTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text= "Ocean Waves"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/music"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
